{{ 'bestseller.css' | asset_url | stylesheet_tag }}
{{ 'bestseller.js' | asset_url | defer script_tag }}


<div class="tabs-wrapper">
  <div class="tabs">
    <button class="tab-btn active" onclick="switchTab('new-arrivals')">New Arrivals</button>
    <button class="tab-btn" onclick="switchTab('bestsellers')">Best Sellers</button>
  </div>

  <div class="tab-content active" id="new-arrivals">
    <div class="product-grid">
      {% for block in section.blocks %}
        {% if block.settings.category == 'new' %}
          <div class="product-card">
            <div class="image-wrapper">
              <img
                src="{{ block.settings.product_image | image_url: width: 400 }}"
                alt="{{ block.settings.title }}"
                width="200"
                height="200"
              >
              {% if block.settings.discount %}
                <span class="discount">{{ block.settings.discount }}% OFF</span>
              {% endif %}
            </div>
            <h4>{{ block.settings.title }}</h4>
            <p class="price">{{ block.settings.price }}</p>
            <p class="variant">{{ block.settings.variant }}</p>
            <button class="add-cart-btn">Add to Cart</button>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <div class="tab-content" id="bestsellers">
    <div class="product-grid">
      {% for block in section.blocks %}
        {% if block.settings.category == 'best' %}
          <div class="product-card">
            <div class="image-wrapper">
              <img
                src="{{ block.settings.product_image | image_url: width: 400 }}"
                alt="{{ block.settings.title }}"
                width="200"
                height="200"
              >
              {% if block.settings.discount %}
                <span class="discount">{{ block.settings.discount }}% OFF</span>
              {% endif %}
            </div>
            <h4>{{ block.settings.title }}</h4>
            <p class="price">{{ block.settings.price }}</p>
            <p class="variant">{{ block.settings.variant }}</p>
            <button class="add-cart-btn">Add to Cart</button>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Tabs",
  "blocks": [
    {
      "type": "product",
      "name": "Product Card",
      "settings": [
        {
          "type": "text",
          "id": "category",
          "label": "Category (new/best)",
          "default": "new"
        },
        {
          "type": "image_picker",
          "id": "product_image",
          "label": "Product Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Product Title"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Product Price"
        },
        {
          "type": "text",
          "id": "variant",
          "label": "Variant (Size/Type)"
        },
        {
          "type": "text",
          "id": "discount",
          "label": "Discount (%)"
        }
      ]
    }
  ],
  "max_blocks": 16,
  "presets": [
    {
      "name": "Product Tabs"
    }
  ]
}
{% endschema %}
