{% comment %}
  Shopify Section: Featured Products with Tabs (Bestsellers / New Arrivals)
{% endcomment %}

<style>
  .featured-tabs {
    padding: 2rem;
  }
  .tabs {
    display: flex;
    gap: 1rem;
    cursor: pointer;
    margin-bottom: 1.5rem;
    font-weight: bold;
  }
  .tabs span.active {
    border-bottom: 2px solid black;
  }
  .product-grid {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
  }
  .product-card {
    min-width: 250px;
    scroll-snap-align: start;
    border: 1px solid #ddd;
    padding: 1rem;
    border-radius: 8px;
    text-align: center;
  }
  .product-carousel {
    position: relative;
    width: 100%;
    overflow: hidden;
  }
  .product-carousel img {
    width: 100%;
    display: none;
  }
  .product-carousel img.active {
    display: block;
  }
  .variant-list {
    margin-top: 0.5rem;
  }
</style>

<div class="featured-tabs" style="background-color: {{ section.settings.bg_color }}">
  <div class="tabs">
    {% for block in section.blocks %}
      <span class="tab-btn {% if forloop.first %}active{% endif %}" data-tab="tab-{{ block.id }}">
        {{ block.settings.tab_title }}
      </span>
    {% endfor %}
  </div>

  {% for block in section.blocks %}
    <div class="tab-content tab-{{ block.id }}" style="display: {% if forloop.first %}flex{% else %}none{% endif %}" class="product-grid">
      <div class="product-grid">
        {% assign collection = collections[block.settings.collection] %}
        {% for product in collection.products limit: block.settings.product_limit %}
          <div class="product-card">
            <div class="product-carousel">
              {% for image in product.images limit: 3 %}
                <img src="{{ image | img_url: 'medium' }}" class="{% if forloop.first %}active{% endif %}
                " width="200px" height="300"/>
              {% endfor %}
            </div>
            <h3 style="color: {{ section.settings.title_color }}; font-size: {{ section.settings.title_size }}">
              {{ product.title }}
            </h3>
            <p style="color: {{ section.settings.price_color }}; font-size: {{ section.settings.price_size }}">
              {{ product.price | money }}
            </p>
            <div class="variant-list">
              {% for variant in product.variants %}
                <span>{{ variant.title }}</span>
              {% endfor %}
            </div>
            <button style="background: {{ section.settings.button_bg }}; color: {{ section.settings.button_color }}">
              Add to Cart
            </button>
          </div>
        {% endfor %}
      </div>
    </div>
  {% endfor %}
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const tabButtons = document.querySelectorAll(".tab-btn");
    const tabContents = document.querySelectorAll(".tab-content");

    tabButtons.forEach((btn) => {
      btn.addEventListener("click", () => {
        tabButtons.forEach((b) => b.classList.remove("active"));
        btn.classList.add("active");

        const target = btn.getAttribute("data-tab");
        tabContents.forEach((c) => {
          c.style.display = c.classList.contains(target) ? "flex" : "none";
        });
      });
    });
  });
</script>

{% schema %}
{
  "name": "Featured Products Tabs",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "title_size",
      "label": "Title Font Size",
      "default": "18px"
    },
    {
      "type": "color",
      "id": "price_color",
      "label": "Price Color",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "price_size",
      "label": "Price Font Size",
      "default": "16px"
    },
    {
      "type": "color",
      "id": "button_bg",
      "label": "Button Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Tab",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Tab Title",
          "default": "Best Selling"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "number",
          "id": "product_limit",
          "label": "Number of Products",
          "default": 6
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Products Tabs",
      "category": "Products",
      "blocks": [
        {
          "type": "tab",
          "settings": {
            "tab_title": "Best Selling"
          }
        },
        {
          "type": "tab",
          "settings": {
            "tab_title": "Latest Arrivals"
          }
        }
      ]
    }
  ]
}
{% endschema %}
