{{ 'bestseller.css' | asset_url | stylesheet_tag }}
{{ 'bestseller.js' | asset_url | defer script_tag }}

{% assign collection = collections[section.settings.bestsellers_collection] %}
{% assign new_arrivals_collection = collections[section.settings.new_arrivals_collection] %}

{% if collection == blank %}
  {% assign collection = collections.all %}
{% endif %}

{% if new_arrivals_collection == blank %}
  {% assign new_arrivals_collection = collections.all %}
{% endif %}
<section class="product-section">
  <h2 class="main-heading">{{ section.settings.heading }}</h2>

  <div class="tabs">
    <button class="tab active" onclick="switchTab('bestsellers')">Bestsellers</button>
    <button class="tab" onclick="switchTab('new-arrivals')">New Arrivals</button>
  </div>

  <div class="product-scroll-container">
    <!-- Bestsellers -->
    <div id="bestsellers" class="product-scroll active">
      {% for product in collections[section.settings.bestsellers_collection].products %}
        <div class="product-card">
          <div class="image-carousel">
            {% for image in product.images limit: 6 %}
              <img
                src="{{ image | img_url: '400x' }}"
                alt="{{ product.title }}"
                width="400"
                height="400"
              >
            {% endfor %}
          </div>
          <h3>{{ product.title }}</h3>
          <p class="price">{{ product.price | money }}</p>
          <a href="{{ product.url }}" class="add-to-cart-btn">View Product</a>
        </div>
      {% endfor %}
    </div>

    <!-- New Arrivals -->
    <div id="new-arrivals" class="product-scroll">
      {% for product in collections[section.settings.new_arrivals_collection].products %}
        <div class="product-card">
          <div class="image-carousel">
            {% for image in product.images limit: 6 %}
              <img
                src="{{ image | img_url: '400x' }}"
                alt="{{ product.title }}"
                width="400"
                height="400"
              >
            {% endfor %}
          </div>
          <h3>{{ product.title }}</h3>
          <p class="price">{{ product.price | money }}</p>
          <a href="{{ product.url }}" class="add-to-cart-btn">View Product</a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Product Tabs",
  "settings": [],
  "blocks": [
    {
      "type": "product_card",
      "name": "Product Card",
      "settings": [
        {
          "type": "text",
          "id": "category",
          "label": "Category (new/best)",
          "default": "new"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Product Title"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Product Price"
        },
        {
          "type": "text",
          "id": "variant",
          "label": "Variant (Size/Type)"
        },
        {
          "type": "text",
          "id": "discount",
          "label": "Discount (%)"
        },
        {
          "type": "image_picker",
          "id": "image_1",
          "label": "Product Image 1"
        },
        {
          "type": "image_picker",
          "id": "image_2",
          "label": "Product Image 2"
        },
        {
          "type": "image_picker",
          "id": "image_3",
          "label": "Product Image 3"
        },
        {
          "type": "image_picker",
          "id": "image_4",
          "label": "Product Image 4"
        },
        {
          "type": "image_picker",
          "id": "image_5",
          "label": "Product Image 5"
        },
        {
          "type": "image_picker",
          "id": "image_6",
          "label": "Product Image 6"
        }
      ]
    }
  ],
  "max_blocks": 16,
  "presets": [
    {
      "name": "Product Tabs"
    }
  ]
}
{% endschema %}

<script>
  function switchTab(tabId) {
    document.querySelectorAll('.tab').forEach((tab) => tab.classList.remove('active'));
    document.querySelectorAll('.product-scroll').forEach((grid) => grid.classList.remove('active'));

    document.getElementById(tabId).classList.add('active');
    event.target.classList.add('active');
  }
</script>

<style>
  .product-section {
    padding: 40px 20px;
  }

  .main-heading {
    text-align: center;
    margin-bottom: 30px;
    font-size: 2em;
  }

  .tabs {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 20px;
  }

  .tab {
    padding: 10px 20px;
    font-weight: bold;
    background: none;
    border: none;
    border-bottom: 2px solid transparent;
    cursor: pointer;
  }

  .tab.active {
    border-color: #000;
  }

  .product-scroll-container {
    overflow: hidden;
  }

  .product-scroll {
    display: none;
    flex-wrap: nowrap;
    overflow-x: auto;
    gap: 20px;
    padding-bottom: 10px;
  }

  .product-scroll.active {
    display: flex;
  }

  .product-card {
    min-width: 250px;
    flex: 0 0 auto;
    border: 1px solid #eee;
    padding: 10px;
    border-radius: 10px;
    background: #fff;
  }

  .image-carousel {
    display: flex;
    overflow-x: auto;
    gap: 10px;
    margin-bottom: 10px;
  }

  .image-carousel img {
    width: 100%;
    max-width: 250px;
    border-radius: 6px;
  }

  .price {
    margin: 5px 0;
    font-weight: bold;
  }

  .add-to-cart-btn {
    display: inline-block;
    padding: 8px 12px;
    background: #000;
    color: #fff;
    text-align: center;
    border-radius: 5px;
    text-decoration: none;
  }
</style>
