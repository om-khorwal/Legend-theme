<section class="hero-banner">
  <a href="{{ section.settings.hero_link }}">
    <img
      src="{{ section.settings.hero_image | image_url: width: 1600 }}"
      alt="Hero Banner"
      width="{{ section.settings.hero_image.width }}"
      height="{{ section.settings.hero_image.height }}"
    >
  </a>
  <div class="hero-text">
    {{ section.settings.hero_text }}
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Banner Image"
    },
    {
      "type": "url",
      "id": "hero_link",
      "label": "Image Link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "hero_text",
      "label": "Overlay Text",
      "default": "Welcome to {{ shop.name }}"
    }
  ]
}
{% endschema %}
