{{ 'circular-grid.css' | asset_url | stylesheet_tag }}

<section class="category-icons">
  <div class="icon-wrapper">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link }}" class="icon-item">
        <img src="{{ block.settings.icon | image_url: width: 100 }}" alt="Category"
        width="200" height="200">
        <span>{{ block.settings.label }}</span>
      </a>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Round Category Icons",
  "max_blocks": 8,
  "blocks": [
    {
      "type": "icon",
      "name": "Category Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Product Link"
        }
      ]
    }
  ],
  "settings": []
}
{% endschema %}
